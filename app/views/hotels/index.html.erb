<p id="notice"><%= notice %></p>

<h1>Welcome to the Hotel California Hotel Management System!</h1>

<table>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.description %></td>
        <td><%= link_to 'Show', hotel %></td> |
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td> |
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Hotel!', new_hotel_path %>